@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Yazı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="abouttitle">Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="AboutTitle" id="abouttitle" placeholder="Hakkımızda Başlığı">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="aboutdescription">Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="AboutDescription" id="aboutdescription" placeholder="Hakkımızda Açıklaması">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="aboutimageurl">Resim Yolunu Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="AboutDescription" id="aboutimageurl"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımda Yazısını Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

