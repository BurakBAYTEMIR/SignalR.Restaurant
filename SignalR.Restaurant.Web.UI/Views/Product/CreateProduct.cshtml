@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productname">Ürün Adınız Giriniz</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="productname" placeholder="Ürün Adı">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Ürün Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="ProductDescription" id="description" placeholder="Ürün Açıklaması">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="price">Ürün Fiyatını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Price" id="price" placeholder="Ürün Fiyatı">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="imageurl">Ürün Resim Yolunu Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl" placeholder="Ürün Resim yolu">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productcategory">Ürün Kategorisini Giriniz</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoryNames, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ürünü Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

