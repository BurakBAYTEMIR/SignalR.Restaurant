@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="socialmediatitle">Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" asp-for="SocialMediaTitle" id="socialmediatitle" placeholder="Başlık giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="socialmediaicon">Sosyal Medya İkonu</label>
                                <input type="text" class="form-control" asp-for="SocialMediaIcon" id="socialmediaicon" placeholder="İkon giriniz.">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="socialmediaurl">Sosyal Medya Linki</label>
                                <input type="text" class="form-control" asp-for="SocialMediaUrl" id="socialmediaurl" placeholder="Link giriniz.">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Sosyal Medya Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

