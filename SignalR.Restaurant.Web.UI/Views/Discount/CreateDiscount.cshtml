@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirimli Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="discounttitle">Ürün Adı</label>
                                <input type="text" class="form-control" asp-for="DiscountTitle" id="discounttitle" placeholder="Ürün adını giriniz.">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="discountamount">Ürün İndirim Oranı</label>
                                <input type="text" class="form-control" asp-for="DiscountAmount" id="discountamount" placeholder="Ürün indirim oranını giriniz.">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="discountimageurl">Ürün Görsel Yolu</label>
                                <input type="text" class="form-control" asp-for="DiscountImageUrl" id="discountimageurl" placeholder="Ürün görsel yolunu giriniz.">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="discountdescription">Ürün Açıklaması</label>
                                <input type="text" class="form-control" asp-for="DiscountDescription" id="discountdescription" placeholder="Ürün açıklamasını giriniz.">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İndirimli Ürün Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>