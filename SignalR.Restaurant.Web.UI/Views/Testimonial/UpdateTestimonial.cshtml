@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="TestimonialID" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Müşteri Yorumu Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="testimonialname">Müşteri Adı</label>
                                <input type="text" class="form-control" asp-for="TestimonialName" id="testimonialname" placeholder="Müşteri adını girniz.">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="testimonialtitle">Müşteri Ünvanı</label>
                                <input type="text" class="form-control" asp-for="TestimonialTitle" id="testimonialtitle" placeholder="Müşteri ünvanını giriniz.">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="testimonialimageurl">Müşteri Resim Dosya Yolu</label>
                                <input type="text" class="form-control" asp-for="TestimonialImageUrl" id="testimonialimageurl" placeholder="Müşteri resim dosya yolunu giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="testimonialcomment">Müşteri Yorumu</label>
                                <input type="text" class="form-control" asp-for="TestimonialComment" id="testimonialcomment" placeholder="Müşteri yorumunu giriniz.">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Müşteri Yorumu Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

