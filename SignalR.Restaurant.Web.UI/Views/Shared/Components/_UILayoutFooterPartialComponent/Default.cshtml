@model List<ResultContactDto>
@foreach (var item in Model)
{
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-col">
                    <div class="footer_contact">
                        <h4>
                            Bize Ulaşın
                        </h4>
                        <div class="contact_link_box">
                            <a href="@item.ContactLocation">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    Lokasyon
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    @item.ContactPhone
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    @item.ContactMail
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_detail">
                        <a href="/Default/Index/" class="footer-logo">
                            @item.ContactFooterTitle
                        </a>
                        <p>
                            @item.ContactFooterDescription
                        </p>
                        @await Component.InvokeAsync("_UILayoutSocialMediaPartialComponent")                        
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <h4>
                        @item.ContactOpenDays
                    </h4>
                    <p>
                        @item.ContactOpenDaysDescription
                    </p>
                    <p>
                        @item.ContactOpenHours
                    </p>
                </div>
            </div>
            <div class="footer-info">
                <p>
                    &copy; <span id="displayYear"></span> Tüm Hakları Saklıdır
                    <a href="/Default/Index/">SignalR Restoran</a><br><br>
                    &copy; <span id="displayYear"></span> Geliştiren
                    <a href="https://themewagon.com/" target="_blank">B&B</a>
                </p>
            </div>
        </div>
    </footer>
}