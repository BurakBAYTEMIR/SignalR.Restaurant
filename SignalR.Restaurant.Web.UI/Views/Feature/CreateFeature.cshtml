@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Öne Çıkan Alan Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="featuretitle1">1. Başlık</label>
                                <input type="text" class="form-control" asp-for="FeatureTitle1" id="featuretitle1" placeholder="1.Başlığı giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="featuretitle2">2. Başlık</label>
                                <input type="text" class="form-control" asp-for="FeatureTitle2" id="featuretitle2" placeholder="2.Başlığı giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="featuretitle3">3. Başlık</label>
                                <input type="text" class="form-control" asp-for="FeatureTitle3" id="featuretitle3" placeholder="3.Başlığı giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="featuredescription1">1.Açıklama</label>
                                <input type="text" class="form-control" asp-for="FeatureDescription1" id="featuredescription1" placeholder="1.Açıklamayı giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="featuredescription2">2.Açıklama</label>
                                <input type="text" class="form-control" asp-for="FeatureDescription2" id="featuredescription2" placeholder="2.Açıklamayı giriniz">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="featuredescription3">3.Açıklama</label>
                                <input type="text" class="form-control" asp-for="FeatureDescription3" id="featuredescription3" placeholder="3.Açıklamayı giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Öne Çıkan Alanı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

